[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "Branding",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "t:settings_schema.colors.settings.background.label",
            "default": "#FFFFFF"
          },   
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "t:settings_schema.colors.settings.background_gradient.label",
            "info": "t:settings_schema.colors.settings.background_gradient.info"
          },
          {
            "type": "color",
            "id": "text",
            "label": "t:settings_schema.colors.settings.text.label",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "button",
            "label": "t:settings_schema.colors.settings.button_background.label",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "t:settings_schema.colors.settings.button_label.label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "t:settings_schema.colors.settings.secondary_button_label.label",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "t:settings_schema.colors.settings.shadow.label",
            "default": "#000000"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Default color scheme",
        "default": "scheme-1"
      },
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "t:promo_banner.name",
    "settings": [
      {
        "type": "checkbox",
        "id": "promo_banner_enabled",
        "label": "t:promo_banner.enable_label",
        "default": false
      },
      {
        "type": "text",
        "id": "promo_banner_text",
        "label": "t:promo_banner.text_label",
        "default": "Free shipping on orders over $75"
      },
      {
        "type": "text",
        "id": "promo_banner_aria_label",
        "label": "t:promo_banner.aria_label",
        "default": "Promotional message"
      }
    ]
  },
  {
    "name": "Newsletter",
    "settings": [
      {
        "type": "text",
        "id": "newsletter_title",
        "label": "Title",
        "default": "Keep updated"
      },
      {
        "type": "richtext",
        "id": "newsletter_subtitle",
        "label": "Subtitle",
        "default": "<p>Stay connected to our community.</p>"
      },
      {
        "type": "video",
        "id": "newsletter_bg_video",
        "label": "Background video"
      },
      {
        "type": "image_picker",
        "id": "newsletter_bg_poster",
        "label": "Background poster"
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_menu_upsell",
        "label": "Upsell menu"
      },
      {
        "type": "link_list",
        "id": "footer_menu_support",
        "label": "Support menu"
      },
      {
        "type": "link_list",
        "id": "footer_menu_contact",
        "label": "Contact menu"
      },
      {
        "type": "link_list",
        "id": "footer_menu_legal",
        "label": "Legal menu"
      },
      {
        "type": "image_picker",
        "id": "footer_background_image",
        "label": "Background image"
      },
      {
        "type": "url",
        "id": "footer_social_instagram",
        "label": "Instagram URL"
      },
      {
        "type": "url",
        "id": "footer_social_linkedin",
        "label": "LinkedIn URL"
      },
      {
        "type": "url",
        "id": "footer_social_tiktok",
        "label": "TikTok URL"
      },
      {
        "type": "url",
        "id": "footer_social_facebook",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "footer_social_youtube",
        "label": "YouTube URL"
      }
    ]
  }
]
