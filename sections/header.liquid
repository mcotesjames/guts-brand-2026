<!-- custom: custom-header -->
{% render 'custom-header', section: section %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "image_picker",
      "id": "logo_image", 
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "min": 80,
      "max": 280,
      "step": 10,
      "default": 160
    },
    {
      "type": "text",
      "id": "b2b_label",
      "label": "B2B label",
      "default": "B2B Login"
    },
    {
      "type": "image_picker",
      "id": "b2b_icon",
      "label": "B2B icon"
    },
    {
      "type": "url",
      "id": "b2b_url",
      "label": "B2B URL"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search",
      "default": true
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search placeholder",
      "default": "Search products"
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show cart",
      "default": true
    }
  ]
}
{% endschema %}
