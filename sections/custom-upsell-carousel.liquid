{{ 'component-custom-collection-carousel.css' | asset_url | stylesheet_tag }}
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"
>
<script src="https://code.jquery.com/jquery-3.7.1.min.js" defer></script>
<script
  src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
  defer
></script>
<script src="{{ 'component-custom-collection-carousel.js' | asset_url }}" defer></script>
<script src="{{ 'component-custom-quick-add.js' | asset_url }}" defer></script>

<section class="custom-upsell-carousel custom-collection-carousel section-padding--md-bottom full-width">
  <div class="container-xl g-4">
    <div class="custom-collection-carousel__header">
      {% if section.settings.heading != blank %}
        <h2 class="custom-collection-carousel__title heading-style-h3">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>

    {% if section.settings.products != blank %}
      <div class="custom-collection-carousel__track" data-collection-carousel>
        {% for product in section.settings.products limit: 6 %}
          <div class="custom-collection-carousel__slide">
            {% render 'custom-product-card', product: product %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="custom-collection-carousel__empty">Select products to display.</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Upsell Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "You might also like"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products",
      "limit": 6
    }
  ],
  "presets": [
    {
      "name": "Custom Upsell Carousel"
    }
  ],
  "templates": [
    "product"
  ]
}
{% endschema %}
